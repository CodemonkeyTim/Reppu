<?xml version="1.0" encoding="UTF-8" ?>
<widget 
	xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
	id="com.vaintee1.reppu" 
	version="0.0.1" >
	
	<name>Reppu</name>
	
	<description>
		Application for browsing LAMKs Reppu
	</description>
	<author email="vaintee1@gmail.com" href="http://github.com/CodemonkeyTim">
		Teemu Vainio
	</author>
	
	<icon src="icon.png" />
	
	<content src="index.html" />
	<access origin="*" />
	
	<gap:plugin name="cordova-plugin-whitelist" version="1.1.0" source="npm" />
	<gap:plugin name="cordova-plugin-file" version="3.0.0" source="npm" />
	<gap:plugin name="cordova-plugin-file-transfer" version="1.3.0" source="npm" />
	<plugin name="com.cordova.plugins.fileopener" spec="1.0.1" source="pgb" />
	<gap:plugin name="it.witek.cordova.plugin.background-mode" version="0.6.3" />
	
	<!-- <preference name="DisallowOverscroll" value="true" /> -->
	<preference name="orientation" value="portrait" />
</widget>